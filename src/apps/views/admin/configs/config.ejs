<%- include("../layout/head",{title:"Edit Product"})%>
<%- include("../layout/header")%>
<%- include("../layout/sidebar")%>	
		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
                <li><a href="/admin/dashboard"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
                <li><a href="/admin/configs">Cấu hình</a></li>
				<li class="active">Thông tin chung</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Thông tin chung</h1>
			</div>
        </div><!--/.row-->
        <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label>Giới thiệu chung</label>
                                    <p name="body"><%=config.body%></p>
                                </div>
                                <div class="form-group">
                                    <label>Địa chỉ</label>
                                
                                    <p  name="address "><%=config.address%></p>

                                </div>
                                <div class="form-group">
                                    <label>Dịch vụ</label>
                                    <p  name="service"><%=config.service%></p>

                                </div>    
                                <div class="form-group">
                                    <label>Hotline</label>
                                    <p name="hotline"><%=config.hotline%></p>
                                </div>                  
                                <div class="form-group">
                                    <label>Email</label>
                                    <p name="email"><%=config.email%></p>
                                </div>  
  
                                <div class="form-group">
                                    <label>Logo Header</label>
                                    <img src="../Uploads/images/<%=config.logo_header%>"/>
                                </div>  
                                <div class="form-group">
                                    <label>Logo Footer</label>
                                    <img src="../Uploads/images/<%=config.logo_footer%>"/>
                                </div>
                                <div class="form-group">
                                    <label>Thông tin đăng ký kinh doanh</label>
                                    <p name="register"><%=config.register%></p>
                                </div>  
                                <a class="btn btn-primary" href="/admin/configs/update/<%=config._id%>">Thay đổi</a>
                        </div>
                    </div>
                </div><!-- /.col-->
            </div><!-- /.row -->
		
	</div>	<!--/.main-->	

    <%- include("../layout/footer")%>		
