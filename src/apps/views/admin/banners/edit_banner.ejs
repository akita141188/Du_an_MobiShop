<%- include("../layout/head",{title:"Edit Banner"})%>
<%- include("../layout/header")%>
<%- include("../layout/sidebar")%>		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/admin/dashboard"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
				<li><a href="/admin/banners">Quản lý banners</a></li>
				<li class="active">Chỉnh sửa banner</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Chỉnh sửa banner</h1>
			</div>
		</div><!--/.row-->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-8">
                            <form action="/admin/banners/update-<%=banner._id%>" role="form" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Tên ảnh:</label>
                                    <input required type="text" name="name" class="form-control" placeholder="Tên danh mục..." value="<%=banner.name%>" autofocus>
                                </div>
                                <div class="form-group">
                                    <label>Ảnh sản phẩm</label>
                                    <input type="file" name="image" onchange="previewImage(this)">
                                    <br>
                                    <div class="preview">
                                        <img width="160" src="../Uploads/images/<%=banner.image%>">
                                    </div>
                                    <script>
                                        function previewImage(input) {
                                            const file = input.files[0];
                                            if (file) {
                                                const reader = new FileReader();
                                                reader.onload = function(e) {
                                                    const img = document.createElement("img");
                                                    img.src = e.target.result;
                                                    img.classList.add("preview-img");   
                                                    // Xóa ảnh cũ trước khi thêm ảnh mới
                                                    document.querySelector(".preview").innerHTML = "";
                                                    document.querySelector(".preview").appendChild(img);
                                                };
                                                reader.readAsDataURL(file);
                                            }
                                        }
                                    </script>
                                </div>
                            <button type="submit" name="sbm" class="btn btn-success">Cập nhật</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>
                        </div>
                    	</form>
                    </div>
                </div>
            </div><!-- /.col-->
	</div>	<!--/.main-->	

    <%- include("../layout/footer")%>		
